import java.util.Scanner;

public class Day39 {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("=== MENU CEMILAN ===");
        System.out.println("1. Roti Bakar");
        System.out.println("2. Pisang Goreng");
        System.out.println("3. Kentang Goreng");
        System.out.print("Pilih nomor menu (1-3): ");
        int pilih = in.nextInt();

        if (pilih == 1) {
            System.out.println("Kamu memilih Roti Bakar");
        } else if (pilih == 2) {
            System.out.println("Kamu memilih Pisang Goreng");
        } else if (pilih == 3) {
            System.out.println("Kamu memilih Kentang Goreng");
        } else {
            System.out.println("Nomor menu tidak tersedia");
        }

       
    }
}
